<resources>

    <!-- Base application theme. -->
    <style name="NewssterTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/newssterPrimaryColor</item>
        <item name="colorPrimaryDark">@color/newssterPrimaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/newssterPrimaryLightColor</item>
        <item name="colorAccent">@color/newssterSecondaryColor</item>
        <item name="colorOnPrimary">@color/newssterPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/newssterSecondaryTextColor</item>
        <item name="colorSecondaryVariant">@color/newssterSecondaryLightColor</item>

        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="toolbarStyle">@style/NewssterToolbar</item>
        <item name="collapsedTitleTextAppearance">@style/NewssterToolbarTitle</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/newssterPrimaryColor</item>
        <item name="colorPrimaryDark">@color/newssterPrimaryDarkColor</item>
        <item name="colorAccent">@color/newssterSecondaryColor</item>
        <item name="android:statusBarColor">@color/newssterSecondaryColor</item>
    </style>
</resources>

