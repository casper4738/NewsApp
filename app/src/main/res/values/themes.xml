<resources>

    <!-- Base application theme. -->
    <style name="NewsappTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/newsappPrimaryColor</item>
        <item name="colorPrimaryDark">@color/newsappPrimaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/newsappPrimaryLightColor</item>
        <item name="colorAccent">@color/newsappSecondaryColor</item>
        <item name="colorOnPrimary">@color/newsappPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/newsappSecondaryTextColor</item>
        <item name="colorSecondaryVariant">@color/newsappSecondaryLightColor</item>

        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="toolbarStyle">@style/NewsappToolbar</item>
        <item name="collapsedTitleTextAppearance">@style/NewsappToolbarTitle</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/newsappPrimaryColor</item>
        <item name="colorPrimaryDark">@color/newsappPrimaryDarkColor</item>
        <item name="colorAccent">@color/newsappSecondaryColor</item>
        <item name="android:statusBarColor">@color/newsappSecondaryColor</item>
    </style>
</resources>

