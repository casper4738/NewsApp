<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Typography-->

    <!--Article Content-->
    <style name="Newsapp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/newsappPrimaryTextColor</item>
    </style>

    <!--Article Author-->
    <style name="Newsapp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/work_sans</item>
    </style>

    <!--Article Title-->
    <style name="Newsapp.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textColor">@color/newsappPrimaryTextColor</item>
    </style>

    <!--Article Description-->
    <style name="Newsapp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/newsappPrimaryTextColor</item>
    </style>

    <!--Article Source, Article Date, Source in Article Item-->
    <style name="Newsapp.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Newsapp.Overline.Main" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/work_sans_thin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Newsapp.Overline.Other" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/work_sans_thin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/goodgrey</item>
    </style>

    <!--Title in Article Item -->
    <style name="Newsapp.Title.Main" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Newsapp.Title.Other" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Newsapp.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

    <!-- Dialog Title -->
    <style name="Newsapp.Dialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/newsappBlackTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Dialog Body -->
    <style name="NewsappDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/newsappPrimaryTextColor</item>
    </style>

    <!-- TextButton in Article. Styled text only, so it matches article content, but behaves like a button -->
    <style name="Newsapp.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/newsappSecondaryColor</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <!-- Toolbar Title -->
    <style name="NewsappToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

</resources>